{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // 1. Let Vercel try to serve static files from 'dist' first
    {
      "handle": "filesystem"
    },
    // 2. If not a static file, and not an /api/* route handled by @vercel/node,
    //    then rewrite to index.html for SPA routing.
    //    @vercel/node should automatically handle /api routes before this.
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}